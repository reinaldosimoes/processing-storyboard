{
  "name": "processing-storyboard",
  "private": true,
  "type": "module",
  "description": "Interactive API debugger that visualizes the step-by-step processing of API calls with animated storyboards",
  "keywords": [
    "api",
    "debugger",
    "storyboard",
    "react",
    "typescript",
    "animation",
    "processing",
    "visualization"
  ],
  "author": "Reinaldo Simoes",
  "license": "MIT",
  "homepage": "https://processing-storyboard.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reinaldosimoes/processing-storyboard.git"
  },
  "bugs": {
    "url": "https://github.com/reinaldosimoes/processing-storyboard/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "vite build --config vite.lib.config.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "motion": "^12.23.12",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.27.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.38.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  }
}
